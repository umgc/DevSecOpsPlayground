@using CaPPMS.Model
@namespace CaPPMS.Shared

<div class="panel panel-default border @Collapse">
    <div class="panel-body">
        <div class="container-fluid">
            <div class="row">
                <div class="font-italic">@faqInfo.Question</div>
            </div>
            <div class="row">
                <div>@faqInfo.Reply</div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Collapse { get; set; } = "collapse"; // hide by default

    private FaqInformation faqInfo = new FaqInformation();

    [Parameter]
    public FaqInformation FaqInformation
    {
        get
        {
            return faqInfo;
        }
        set
        {
            faqInfo = value;
        }
    }
}
