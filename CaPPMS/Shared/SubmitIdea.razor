@using CaPPMS.Data
@inject ProjectManagerService ProjectManager

<div class="rounded text-black-50">
    <div class="d-flex">
        <div class="col rounded">
            <img src="/images/idea.PNG"  alt="Idea" />
        </div>
        <div class="col rounded  justify-content-md-center p-2 m-2 shadow" style="height:90%">
            <div class="rounded p-3" style="background-color:darkred; color:yellow;">
                Software Development Project Proposal
            </div>
            <div class="submitidea" >
                @if (Idea.IsUploading)
                {
                    <div class="spinner-border" role="status">
                        <span class="sr-only">Loading...</span>
                    </div>
                }
                else
                {
                    <Idea ShowComments="false" ShowFileAttachments="false" ShowFormButton="Idea.FormButtons.Submit" />
                }
            </div>
        </div>
    </div>
</div>


